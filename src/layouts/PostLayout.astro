---
import { format } from 'date-fns';
import BaseLayout from '../layouts/BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <div class="mx-auto max-w-screen-lg px-3 py-6">
    <h1 class="text-center text-3xl font-bold">{frontmatter.title}</h1>

    <div class="mt-2 text-center text-sm text-gray-400">
      By {frontmatter.author} on{' '}
      {format(new Date(frontmatter.pubDate), 'LLL d, yyyy')}
    </div>

    <div class="mx-auto mt-5 max-w-prose">
      <div class="aspect-h-2 aspect-w-3">
        <img
          class="h-full w-full rounded-lg object-cover object-center"
          src={frontmatter.imgSrc}
          alt={frontmatter.imgAlt}
        />
      </div>

      <div class="prose prose-invert mt-8 prose-img:rounded-lg">
        <slot />
      </div>
    </div>
  </div>
</BaseLayout>
